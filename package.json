{
  "name": "civmaster",
  "productName": "Civilization Master",
  "version": "0.0.1",
  "description": "Civilization Master",
  "main": "main",
  "bin": "cli.js",
  "scripts": {
    "prepare": "pika-web",
    "start": "electron .",
    "dev": "electron . --debug",
    "test": "mocha && standard",
    "package": "npm-run-all package:*",
    "package:mac": "electron-packager . --overwrite --platform=darwin --arch=x64 --out=out --icon=assets/app-icon/mac/app.icns --osx-sign.identity='Developer ID Application: GitHub' --extend-info=assets/mac/info.plist",
    "package:win": "electron-packager . --overwrite --platform=win32 --arch=ia32 --out=out --icon=assets/app-icon/win/app.ico",
    "package:linux": "electron-packager . --overwrite --platform=linux --arch=x64 --out=out",
    "package:sign-exe": "signcode './out/Civilization Master-win32-ia32/Civilization Master.exe' --cert ~/civmaster.p12 --prompt --name 'Civilization Master' --url 'https://merri.net'",
    "package:installer": "node ./script/installer.js",
    "package:sign-installer": "signcode './out/windows-installer/CivMasterSetup.exe' --cert ~/civmaster.p12 --prompt --name 'Civilization Master' --url 'https://merri.net'",
    "xpackage:mas": "./script/mas.sh",
    "windows-store": "node ./script/windows-store.js",
    "release": "node ./script/release.js",
    "prepack": "check-for-leaks",
    "prepush": "check-for-leaks"
  },
  "repository": "https://github.com/merri/civmaster",
  "keywords": [
    "Civ",
    "Civilization",
    "Civ4",
    "Civilization IV",
    "Civ5",
    "Civilization V",
    "Civ6",
    "Civilization VI",
    "CivBE",
    "Beyond Earth"
  ],
  "author": "Vesa Piittinen",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.4.0",
    "@babel/preset-env": "^7.4.2",
    "@babel/register": "^7.4.0",
    "@octokit/rest": "^16.3.2",
    "@pika/web": "^0.4.0",
    "chai": "^3.4.1",
    "chai-as-promised": "^6.0.0",
    "check-for-leaks": "^1.2.0",
    "devtron": "^1.3.0",
    "electron-packager": "^12.1.0",
    "electron-winstaller": "^2.2.0",
    "husky": "^0.14.3",
    "mocha": "^5.2.0",
    "npm-run-all": "^4.0.2",
    "request": "^2.70.0",
    "rimraf": "^2.5.2",
    "signcode": "^0.5.0",
    "spectron": "^5.0.0",
    "standard": "^8.2.0"
  },
  "dependencies": {
    "electron": "^9.4.0",
    "electron-log": "^2.2.14",
    "electron-settings": "^3.0.7",
    "electron-shortcut-normalizer": "^1.0.0",
    "find-steam-app": "^1.0.1",
    "glob": "^7.1.0",
    "highlight.js": "^9.3.0",
    "lodash": "^4.17.11",
    "recursive-readdir": "^2.2.2",
    "update-electron-app": "^1.1.1",
    "xml-js": "^1.6.11"
  },
  "standard": {
    "env": {
      "mocha": true
    }
  }
}
